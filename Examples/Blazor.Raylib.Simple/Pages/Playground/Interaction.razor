@page "/playground/interaction"

<div class="pt-10 px-10">
    <div class="flex items-center justify-between pb-10">
        <div class="flex items-center">
            <div class=" b-1 b-solid b-gray-400 rounded px-2 py-1 hover:bg-white/5 cursor-pointer text-sm" @onclick="ChangeColor">Change Color</div>
        </div>
        <div class="flex items-center">
            <span>@($"Mouse: {_position.X:N0} | {_position.Y:N0}")</span>
        </div>
    </div>
    <div class="flex items-center justify-center">
        <Window Class="w-2/3" Title="@($"FPS: {_fps}")">
            <Raylib OnInit="Init" OnRender="Render"></Raylib>
        </Window>
    </div>
</div>